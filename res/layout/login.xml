<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:background="@drawable/login_bg">
	
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"
        android:gravity="center" >
        
        <ImageView android:src="@drawable/login_maintop" android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_marginBottom="-20dp" android:scaleType="fitXY"/>
         
        <ImageView android:src="@drawable/login_tx1" android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_marginBottom="10dp"/>
        
	    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" 
	        android:background="@drawable/login_box"
			android:padding="10dp">
	        
		    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal"
		        android:gravity="center" android:visibility="visible"
		        android:layout_centerInParent="true">
		        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical"
		            android:gravity="center">
		            <EditText android:id="@+id/loginID" android:layout_width="wrap_content" android:minWidth="180dp" android:layout_height="wrap_content" 
		                android:hint="아이디" android:singleLine="true" android:text=""/>
		    		<EditText android:id="@+id/loginPW" android:layout_width="wrap_content" android:minWidth="180dp" android:layout_height="wrap_content" 
		    		    android:hint="패스워드" android:maxLines="1" android:password="true"
		    		    android:singleLine="true" android:text=""/>
		        </LinearLayout>
		        <ImageButton android:id="@+id/loginButton" android:src="@drawable/login_button_b" android:layout_width="wrap_content"
		            android:layout_height="wrap_content" android:layout_weight="1" android:background="#0000"
		            android:contentDescription="로그인"
		            android:layout_marginLeft="10dp"/>
		    </LinearLayout>
		    <CheckBox android:id="@+id/autoLogin" android:layout_width="wrap_content" android:layout_height="wrap_content"
		        	android:text="자동로그인" android:textColor="@color/darkText" android:visibility="gone"/>
		        
		    
	    </RelativeLayout>
	    
	    <ImageView android:src="@drawable/login_tx2" android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_marginTop="10dp"/>
        
	    
    </LinearLayout>
    
    
    

</LinearLayout>